{
  "name": "@ap/utils",
  "version": "0.1.0",
  "private": true,
  "exports": {
    "./*": {
      "import": "./dist/*/index.mjs",
      "types": "./dist/*/index.d.mts"
    },
    "./*/*": {
      "import": "./dist/*/*/index.mjs",
      "types": "./dist/*/*/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup src/**/*.ts src/**/**/*.ts --format esm --dts --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@ap/eslint-config": "*",
    "@ap/jest-config": "*",
    "@ap/typescript-config": "*",
    "@types/node": "^20.19.8",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
