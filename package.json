{
  "name": "ap-ui",
  "version": "0.1.0",
  "private": true,
  "engine": "node >= 22",
  "packageManager": "npm@11.4.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:playground": "turbo run build --filter=playground",
    "build:ui-kit": "turbo run build --filter=@ap/ui-kit",
    "clean": "rimraf node_modules */**/node_modules",
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=playground",
    "dev:ui-kit": "turbo run dev --filter=@ap/ui-kit",
    "format": "turbo run format",
    "gen:component": "turbo gen component",
    "test": "turbo run test --filter=@ap/ui-kit --filter=@ap/utils --filter=playground",
    "test:watch": "turbo run test:watch --filter=@ap/ui-kit --filter=@ap/utils --filter=playground",
    "test:playground": "turbo run test --filter=playground",
    "test:ui-kit": "turbo run test --filter=@ap/ui-kit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
